# Server Configuration
PORT=3000
NODE_ENV=development

# Hyperledger Fabric Network Configuration
FABRIC_NETWORK_PATH=../network

# Channel Configuration
CHANNEL_NAME=landregistrychannel
CHAINCODE_NAME=landregistry

# Organization Configuration
# Primary organization for API operations
ORG_NAME=LandRegMSP
ORG_MSPID=LandRegMSP
PEER_ENDPOINT=peer0.landreg.example.com:7051

# Certificate Authority Configuration
CA_NAME=ca-landreg
CA_ENDPOINT=localhost:8054
CA_ADMIN_USERNAME=admin
CA_ADMIN_PASSWORD=adminpw

# Wallet Path (relative to backend directory)
WALLET_PATH=./wallet

# Connection Profile
CONNECTION_PROFILE_PATH=../network/organizations/peerOrganizations/landreg.example.com/connection-landreg.yaml

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:3001
